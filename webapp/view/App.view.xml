<mvc:View
    controllerName="northwind.odata.ui5.northwind.controller.App"
    xmlns:mvc="sap.ui.core.mvc"
    displayBlock="true"
    xmlns="sap.m"
>
    <Shell id="shell">
        <App id="app">
            <pages>
                <Page id="page" title="{i18n>title}">
                    <content>
                        <List id="_IDGenList1" items="{/Products}" growing="true" growingThreshold="20">
                            <items>
                                <StandardListItem id="_IDGenStandardListItem1"  title="{ProductName}" description="{ProductID}" ></StandardListItem>
                            </items>
                        </List>
                    </content>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
